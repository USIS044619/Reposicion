<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tt"
    tools:context=".agregarVehiculo">

    <EditText
        android:id="@+id/txtMarca"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="85dp"
        android:hint="Marca" />

    <EditText
        android:id="@+id/txtModelo"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="145dp"
        android:hint="Modelo" />

    <EditText
        android:id="@+id/txtYear"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="205dp"
        android:hint="AÃ±o"
        android:inputType="number" />

    <EditText
        android:id="@+id/txtNum_Motor"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="265dp"
        android:hint="Numero motor"/>

    <EditText
        android:id="@+id/txtNum_Chasis"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="325dp"
        android:hint="Numero Chasis"/>

    <Button
        android:id="@+id/btnGuardarVehiculos"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="445dp"
        android:text="Guardar Vehiculo" />

    <Button
        android:id="@+id/btnMostrarVehiculos"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:text="Mostar Productos" />

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="#3F51B5"
        android:text="              VEHICULOS"
        android:textColor="#FFFDFD"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/imgPhotoProducto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="30dp"
        android:soundEffectsEnabled="false"
        app:srcCompat="@drawable/camara" />

    <ImageView
        android:id="@+id/imgGaleriaProducto"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="30dp"
        android:soundEffectsEnabled="false"
        app:srcCompat="@drawable/picture" />


</RelativeLayout>